{
  "name": "mcp-proxmox-server",
  "version": "2.0.0",
  "description": "Production-grade MCP server for Proxmox virtualization management with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-proxmox": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "tsc && node --watch dist/index.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.0",
    "dotenv": "^17.2.3",
    "https": "^1.0.0",
    "node-fetch": "^3.3.2",
    "winston": "^3.18.3",
    "zod": "^3.25.76"
  },
  "keywords": [
    "mcp",
    "proxmox",
    "virtualization",
    "vm",
    "devops"
  ],
  "author": "Dev Server Setup",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
