# Proxmox Server Configuration
PROXMOX_HOST=192.168.1.100
PROXMOX_PORT=8006
PROXMOX_USER=root@pam
PROXMOX_TOKEN_NAME=mcp-server
PROXMOX_TOKEN_VALUE=your-token-value-here

# Permission Level
# Set to 'true' for advanced features (detailed metrics, command execution)
# Requires API token with Sys.Audit, VM.Monitor, VM.Console permissions
PROXMOX_ALLOW_ELEVATED=false

# Optional: Connection Settings
# PROXMOX_TIMEOUT=30000
# PROXMOX_RETRY_ATTEMPTS=3
# PROXMOX_RETRY_DELAY=1000

# Logging Configuration
LOG_LEVEL=info
